<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#03A9F4">


    <ImageView
        android:id="@+id/sofaLogo"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:src="@drawable/baseline_chair_24"
        app:layout_constraintBottom_toTopOf="@+id/logoTextView"
        app:layout_constraintEnd_toStartOf="@+id/runLogo"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginBottom="30dp"/>

    <ImageView
        android:id="@+id/runLogo"
        android:layout_width="60dp"
        android:layout_height="60dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/sofaLogo"
        app:layout_constraintBottom_toTopOf="@+id/logoTextView"
        android:src="@drawable/baseline_directions_run_24"
        android:layout_marginBottom="30dp"
        />

    <TextView
        android:id="@+id/logoTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:gravity="center"
        android:textSize="30dp"
        android:text="Escape From Sofa"
        android:textColor="@color/white"
        android:textStyle="bold"
        app:layout_constraintVertical_bias="0.6"
        />
</androidx.constraintlayout.widget.ConstraintLayout>